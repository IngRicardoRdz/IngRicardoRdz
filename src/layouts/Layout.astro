---
import Favicon from "../utilities/favicon.astro";
import MetaTags from "../utilities/metaTags.astro";
import Scripts from "../utilities/globalScripts.astro";
import Styles from "../utilities/globalStyles.astro";

interface Props {
	title: string;
	language: string;
	htmlClasses: string;
	metaTags?: boolean;
}

const {
	title,
	language,
	htmlClasses,
	metaTags = true,
} = Astro.props;
---

<!doctype html>
<html lang={ language } class={ htmlClasses }>
	<head>
		<meta charset="UTF-8"/>

		{ metaTags && <MetaTags/> }

		<Favicon/>

		<title>{ title }</title>

		<Styles/>
	</head>
	<body>
		<slot/>
	</body>

	<Scripts/>
</html>