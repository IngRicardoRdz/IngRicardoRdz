<div class="card col-span-12 md:col-span-4 lg:col-span-1 md:row-span-2 h-44 lg:h-full center hover:cursor-alias hover:text-[#EF9B25C5]" id="projects">

    <img src="https://proyecta.utch.edu.mx/public/images/logopyverde.png" class="carousel max-w-44 md:max-w-full" alt="UTCH Proyecta logo"/>
    <img data-src="https://kinnil.com/assets/img/Kinnil-Logo.png" class="lazyload carousel max-w-44 md:max-w-full hidden" alt="Kinnil logo"/>
    <img data-src="https://pidelectronics.com/wp-content/uploads/2022/08/image-15.png" class="lazyload carousel max-w-44 md:max-w-full hidden" alt="JADE Smart Cargo Logistics logo"/>
    <img data-src="https://www.oxlogistic.com/assets/img/logos/ImagotipoOX_36x36_Negro.svg" class="lazyload carousel max-w-44 md:max-w-full hidden" alt="OX Logistics logo"/>
    <img data-src="https://pidelectronics.com/wp-content/uploads/2022/09/Logo-Ignite.png" class="lazyload carousel max-w-44 md:max-w-full hidden" alt="Ignite logo"/>
    <img data-src="https://pidelectronics.com/wp-content/uploads/2022/09/Group-3656-300x109.png" class="lazyload carousel max-w-44 md:max-w-full hidden" alt="EZSort logo"/>
    
</div>

<script>
    const imgs = document.querySelectorAll('.carousel');
    let imgPosition = 0;
    const seconds = 2500;

    const links = [
        'https://proyecta.utch.edu.mx/',
        'https://kinnil.com/',
        'https://jadesmartcargo.com/',
        'https://www.oxlogistic.com/',
        'https://pidelectronics.com/ignite/',
        'https:///app.ezsort.tech/',
    ];

    let interval = setInterval(nextImg, seconds);

    function updatePosition() {
        for (let img of imgs) {
            img.classList.remove('block');
            img.classList.add('hidden');
        }

        imgs[imgPosition].classList.remove('hidden');
        imgs[imgPosition].classList.add('block');
    }

    function nextImg() {
        if (imgPosition === imgs.length - 1) imgPosition = 0;
        else imgPosition++;

        updatePosition();
    }

    document.getElementById('projects')!.addEventListener('click', () => window.open(links[imgPosition], '_blank'));

    document.getElementById('projects')!.addEventListener('mouseover', () => clearInterval(interval));

    document.getElementById('projects')!.addEventListener('mouseout', () => interval = setInterval(nextImg, seconds));
</script>